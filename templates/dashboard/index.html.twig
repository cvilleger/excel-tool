{% extends 'base.html.twig' %}

{% block title %}Dashboard - {{ parent() }}{% endblock %}

{% block body %}
<div class="container">
    <h1>Upload Files</h1>
    {{ form_start(form) }}
        {{ form_row(form.files) }}
        <br/>
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
        </button>
    {{ form_end(form) }}

    <h5>Space used : {{ totalFileSize }} Ko</h5>
    <a href="{{ path('app_dashboard_reset') }}" class="waves-effect waves-light btn"><i class="material-icons left">cloud</i>Reset</a>
    <a href="{{ path('app_dashboard_notification') }}" class="waves-effect waves-light btn"><i class="material-icons left">cloud</i>Merge To CSV</a>

    <table class="striped highlight">
        <thead>
            <tr>
                <th>Name</th>
                <th>Size</th>
            </tr>
        </thead>
        <tbody>
        {% for file in app.user.files %}
            <tr>
                <td>{{ file.name }}</td>
                <td>{{ file.size }} Ko</td>
            </tr>
        {% else %}
            <tr>
                <td>No Files</td>
                <td>No Files</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
